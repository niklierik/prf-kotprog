{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "app": {
      "type": "object",
      "properties": {
        "port": {
          "type": "number"
        }
      },
      "required": ["port"]
    },
    "db": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        }
      },
      "required": ["url"]
    },
    "auth": {
      "type": "object",
      "properties": {
        "salt": {
          "type": "number"
        },
        "secret": {
          "type": "string"
        },
        "tokenExpiresIn": {
          "type": "string"
        },
        "superadmin": {
          "type": "object",
          "properties": {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": ["username", "password"]
        }
      },
      "required": ["salt", "secret", "tokenExpiresIn", "superadmin"]
    }
  },
  "required": ["app", "db", "auth"]
}
